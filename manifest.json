{
    "manifest_version": 3,
    "name": "Voice-to-Prompt",
    "version": "1.0",
    "description": "Speak to create a prompt and copy it to the clipboard.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "permissions": [
        "clipboardWrite"
    ]
}
